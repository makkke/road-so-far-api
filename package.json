{
  "name": "road-so-far-api",
  "version": "0.0.1",
  "description": "API service for Road so Far",
  "author": "Viatcheslav Ivanov <viatcheslav.ivanov@surrey.ca>",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/src/index",
    "start:dev": "cross-env NODE_ENV=development nodemon src/index.js --exec babel-node",
    "build": "npm run clean && babel . --out-dir ./dist/ --ignore ./node_modules/",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha --compilers js:babel-register ./tests/unit/**/*.spec.js",
    "test:integration": "mocha --compilers js:babel-register --require babel-polyfill ./tests/integration/**/*.spec.js",
    "clean": "rm -rf ./dist",
    "db:seed": "babel-node seed.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cityofsurrey/zephyr"
  },
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.7.1",
    "cross-env": "^2.0.0",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "express-jwt": "^3.4.0",
    "express-validation": "^1.0.0",
    "express-winston": "^2.0.0",
    "http-status": "^0.2.3",
    "is_js": "^0.8.0",
    "joi": "^9.0.4",
    "jsonwebtoken": "^7.1.9",
    "method-override": "^2.3.6",
    "mongoose": "^4.5.8",
    "mongoose-id-validator": "^0.3.0",
    "mongoose-unique-validator": "^1.0.2",
    "morgan": "~1.7.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "request": "^2.74.0",
    "slug": "^0.9.1",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "10.0.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "faker": "^3.1.0",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.0",
    "supertest": "^2.0.0"
  }
}
