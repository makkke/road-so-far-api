{
  "name": "road-so-far-api",
  "version": "0.0.1",
  "description": "API service for Road So Far",
  "main": "handler.js",
  "scripts": {
    "start:dev": "NODE_ENV=development PORT=8090 nodemon src/index.js --watch src --exec babel-node | bunyan",
    "start": "nodemon index.js --exec babel-node | bunyan",
    "build": "npm run build:node_modules && npm run build:graphql && npm run build:auth",
    "build:node_modules": "cd api && yarn && cd ..",
    "build:graphql": "NODE_ENV=production babel --out-dir='api/graphql' ./graphql",
    "build:auth": "NODE_ENV=production babel --out-dir='api/auth' ./auth",
    "deploy": "npm run build && cd api && serverless --stage=${DEPLOY_STAGE:-development} deploy",
    "lint": "eslint .",
    "playground": "babel-node ./playground.js --presets=es2015,stage-0",
    "clean": "rm -rf ./dist",
    "test:unit": "NODE_ENV=test ava tests/unit/**/*.test.js",
    "test:integration": "NODE_ENV=test ava --serial --fail-fast tests/integration/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makkke/road-so-far-api.git"
  },
  "author": "Viatcheslav Ivanov <slava@makkke.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/makkke/road-so-far-api/issues"
  },
  "homepage": "https://github.com/makkke/road-so-far-api#readme",
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "dependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.1.1",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "body-parser": "^1.16.1",
    "bunyan": "^1.8.5",
    "cors": "^2.8.1",
    "dotenv": "^4.0.0",
    "dynogels": "^7.0.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "express": "^4.14.1",
    "express-graphql": "^0.6.3",
    "express-jwt": "^5.1.0",
    "gql-merge": "^0.0.4",
    "graphql": "^0.9.1",
    "graphql-relay": "^0.5.1",
    "graphql-server-express": "^0.6.0",
    "graphql-tools": "^0.10.0",
    "joi": "^10.2.2",
    "jsonwebtoken": "^7.2.1",
    "lodash": "^4.17.4",
    "nodemon": "^1.11.0"
  },
  "devDependencies": {}
}
